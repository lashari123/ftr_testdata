<apex:page standardcontroller="Support_Team_Member__c">
	<apex:sectionHeader title="{!Support_Team_Member__c.Account__r.Name}" subtitle="New Support Team Member"/>
	<apex:pageMessages />
	<apex:form >
		<apex:pageBlock >
			<apex:pageBlockButtons location="top" >
				<apex:commandButton action="{!Save}" value="Save"/>
			</apex:pageBlockButtons>
			<apex:pageBlockSection columns="1">
					<apex:inputfield required="true" value="{!Support_Team_Member__c.Team_Member__c}"/>
					<apex:inputfield required="true" value="{!Support_Team_Member__c.Support_Role__c}"/>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>